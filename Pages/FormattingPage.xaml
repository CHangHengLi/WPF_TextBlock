<Page x:Class="WPF_TextBlock.Pages.FormattingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_TextBlock.Pages"
      mc:Ignorable="d" 
      Title="文本格式化">

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Text="TextBlock文本格式化" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
            
            <!-- 基本文本格式化 -->
            <GroupBox Header="基本文本格式化" Padding="10">
                <StackPanel>
                    <TextBlock Text="通过设置TextBlock的属性，可以控制整个文本块的格式" 
                               TextWrapping="Wrap" Margin="0,5,0,10"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <!-- 字体样式 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="字体样式：" FontWeight="Bold" Margin="0,5"/>
                        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="10,5">
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,5,0">
                                <TextBlock Text="普通文本" Padding="5"/>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5,0">
                                <TextBlock Text="粗体文本" FontWeight="Bold" Padding="5"/>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5,0">
                                <TextBlock Text="斜体文本" FontStyle="Italic" Padding="5"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- 字体大小 -->
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="字体大小：" FontWeight="Bold" Margin="0,15,0,5"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Margin="10,15,0,5">
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,5,0">
                                <TextBlock Text="小字体" FontSize="12" Padding="5"/>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5,0">
                                <TextBlock Text="中等字体" FontSize="16" Padding="5"/>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5,0">
                                <TextBlock Text="大字体" FontSize="20" Padding="5"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- 字体颜色 -->
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="字体颜色：" FontWeight="Bold" Margin="0,15,0,5"/>
                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="10,15,0,5">
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,5,0">
                                <TextBlock Text="红色文本" Foreground="Red" Padding="5"/>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5,0">
                                <TextBlock Text="绿色文本" Foreground="Green" Padding="5"/>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5,0">
                                <TextBlock Text="蓝色文本" Foreground="Blue" Padding="5"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- 文本对齐 -->
                        <TextBlock Grid.Row="3" Grid.Column="0" Text="文本对齐：" FontWeight="Bold" Margin="0,15,0,5"/>
                        <StackPanel Grid.Row="3" Grid.Column="1" Margin="10,15,0,5">
                            <Border BorderBrush="Gray" BorderThickness="1" Width="300" Margin="0,0,0,5">
                                <TextBlock Text="左对齐文本" TextAlignment="Left" Padding="5"/>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" Width="300" Margin="0,5">
                                <TextBlock Text="居中对齐文本" TextAlignment="Center" Padding="5"/>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" Width="300" Margin="0,5">
                                <TextBlock Text="右对齐文本" TextAlignment="Right" Padding="5"/>
                            </Border>
                        </StackPanel>
                        
                        <!-- 文本装饰 -->
                        <TextBlock Grid.Row="4" Grid.Column="0" Text="文本装饰：" FontWeight="Bold" Margin="0,15,0,5"/>
                        <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="10,15,0,5">
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="0,0,5,0">
                                <TextBlock Text="下划线" TextDecorations="Underline" Padding="5"/>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5,0">
                                <TextBlock Text="删除线" TextDecorations="Strikethrough" Padding="5"/>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" Margin="5,0">
                                <TextBlock Text="上划线" TextDecorations="OverLine" Padding="5"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </GroupBox>
            
            <!-- 内联文本格式化 -->
            <GroupBox Header="内联文本格式化" Margin="0,20,0,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="内联格式允许对文本的不同部分应用不同的格式" 
                               TextWrapping="Wrap" Margin="0,5,0,10"/>
                    
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,5,0,15">
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="这是默认格式的文本，"/>
                            <Run Text="这部分是红色粗体，" Foreground="Red" FontWeight="Bold"/>
                            <Run Text="这部分是蓝色斜体，" Foreground="Blue" FontStyle="Italic"/>
                            <Run Text="这部分有下划线，" TextDecorations="Underline"/>
                            <Run Text="这部分字体更大" FontSize="18"/>
                        </TextBlock>
                    </Border>
                    
                    <TextBlock Text="使用内联元素组合格式" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,5,0,15">
                        <TextBlock TextWrapping="Wrap">
                            普通文本，<Bold>粗体文本</Bold>，<Italic>斜体文本</Italic>，<Underline>下划线文本</Underline>，
                            <Bold><Italic>粗斜体文本</Italic></Bold>，
                            <Span Foreground="Green">绿色文本</Span>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </GroupBox>
            
            <!-- 特殊文本效果 -->
            <GroupBox Header="特殊文本效果" Margin="0,20,0,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="TextBlock还支持一些特殊效果，如阴影、发光等" 
                               TextWrapping="Wrap" Margin="0,5,0,10"/>
                    
                    <!-- 文本阴影效果 -->
                    <TextBlock Text="1. 文本阴影效果" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,5,0,15">
                        <TextBlock Text="带有阴影效果的文本" FontSize="18" FontWeight="Bold">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="2" Direction="330" Color="Gray" 
                                                 Opacity="0.6" BlurRadius="2"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>
                    
                    <!-- 文本发光效果 -->
                    <TextBlock Text="2. 文本发光效果" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,5,0,15">
                        <TextBlock Text="带有发光效果的文本" FontSize="18" FontWeight="Bold">
                            <TextBlock.Effect>
                                <DropShadowEffect ShadowDepth="0" Color="#3399FF" Opacity="1" BlurRadius="10"/>
                            </TextBlock.Effect>
                        </TextBlock>
                    </Border>
                    
                    <!-- 渐变文本 -->
                    <TextBlock Text="3. 渐变文本" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,5,0,15">
                        <TextBlock Text="渐变色文本效果" FontSize="18" FontWeight="Bold">
                            <TextBlock.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="Red" Offset="0.0"/>
                                    <GradientStop Color="Yellow" Offset="0.5"/>
                                    <GradientStop Color="Green" Offset="1.0"/>
                                </LinearGradientBrush>
                            </TextBlock.Foreground>
                        </TextBlock>
                    </Border>
                    
                    <!-- 镜像效果 -->
                    <TextBlock Text="4. 镜像效果" FontWeight="Bold" Margin="0,10,0,5"/>
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,5,0,15">
                        <StackPanel>
                            <TextBlock Text="原始文本" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock Text="镜像文本" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0">
                                <TextBlock.RenderTransform>
                                    <ScaleTransform ScaleY="-1"/>
                                </TextBlock.RenderTransform>
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="Black" Offset="0.0"/>
                                        <GradientStop Color="Transparent" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </GroupBox>
            
            <!-- 组合示例 -->
            <GroupBox Header="综合格式化示例" Margin="0,20,0,0" Padding="10">
                <StackPanel>
                    <TextBlock Text="以下是一个综合应用多种格式的示例" 
                               TextWrapping="Wrap" Margin="0,5,0,10"/>
                    
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="15" Margin="0,5,0,15">
                        <StackPanel>
                            <TextBlock TextAlignment="Center" FontSize="22" FontWeight="Bold" Margin="0,0,0,15">
                                <TextBlock.Foreground>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                        <GradientStop Color="#0078D7" Offset="0.0"/>
                                        <GradientStop Color="#5C2D91" Offset="1.0"/>
                                    </LinearGradientBrush>
                                </TextBlock.Foreground>
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="1" Direction="330" Color="Gray" 
                                                     Opacity="0.5" BlurRadius="2"/>
                                </TextBlock.Effect>
                                TextBlock格式化指南
                            </TextBlock>
                            
                            <TextBlock TextWrapping="Wrap" LineHeight="24">
                                <Run Text="WPF TextBlock" FontWeight="Bold" FontSize="16"/>
                                <Run Text="提供了丰富的文本格式化功能，可以创建具有"/>
                                <Run Text="专业外观" FontStyle="Italic" Foreground="#0078D7"/>
                                <Run Text="的用户界面。通过合理使用这些格式化选项，可以显著提升应用程序的"/>
                                <Run Text="可读性" TextDecorations="Underline"/>
                                <Run Text="和"/>
                                <Run Text="用户体验" TextDecorations="Underline"/>
                                <Run Text="。"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</Page> 